{
  "id": "customers",
  "name": "Customers",
  "version": "1.0.0",
  "description": "Manage existing customers, their contact details, ownership, status, and ongoing relationship data",
  "enabled": true,
  "routes": [
    {
      "path": "/customers",
      "component": "index",
      "title": "Customers",
      "requiresAuth": true
    }
  ],
  "api": {
    "basePath": "/api/customers",
    "endpoints": [
      { "method": "GET", "path": "", "handler": "list", "requiresAuth": true },
      { "method": "POST", "path": "", "handler": "create", "requiresAuth": true },
      { "method": "GET", "path": "/:id", "handler": "getById", "requiresAuth": true },
      { "method": "PATCH", "path": "/:id", "handler": "update", "requiresAuth": true },
      { "method": "DELETE", "path": "/:id", "handler": "delete", "requiresAuth": true },
      { "method": "POST", "path": "/:id/duplicate", "handler": "duplicate", "requiresAuth": true },
      { "method": "POST", "path": "/import", "handler": "import", "requiresAuth": true },
      { "method": "GET", "path": "/export", "handler": "export", "requiresAuth": true }
    ]
  },
  "permissions": {
    "create": "customers:create",
    "read": "customers:read",
    "update": "customers:update",
    "delete": "customers:delete",
    "assign": "customers:assign",
    "import": "customers:import",
    "export": "customers:export",
    "duplicate": "customers:duplicate",
    "manage_labels": "customers:manage_labels",
    "manage": "customers:*"
  },
  "navigation": {
    "label": "Customers",
    "icon": "UserCheck",
    "path": "/customers",
    "order": 20
  },
  "fields": {
    "enabled": true,
    "configPath": "./config/fields.config.ts"
  },
  "custom_field": true
}

